mixin hero_section(icon_path, title, subtitle)
        <section class="hero">
            <img src="#{base}#{icon_path}" width="140">
            <h1>#{title}</h1>
            <p class="tagline">#{subtitle}</p>
        </section>

mixin card_event_category(name, description)
        <div class="genre-card">
            <h3 class="genre-name">#{name}</h3>
            <p class="genre-description">#{description}</p>
        </div>

mixin card_event(path_url, title, date, place, event_time, genre, price_from)
        <a href="#/evento/{path_url}" class="event-card">
            <div class="event-image"></div>
            <div class="event-info">
                <h3 class="event-title">#{title}</h3>
                <div class="event-details">
                    <p>#{date}</p>
                    <p>#{place}</p>
                    <p>#{event_time}</p>
                    <p>#{genre}</p>
                </div>
                <div class="event-price">Desde $#{ Format_CLP(price_from)}</div>
            </div>
        </a>


 

